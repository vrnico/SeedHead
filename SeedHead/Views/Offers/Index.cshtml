    ViewData["Title"] = "Offer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Offer</h2>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var listOffer in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelOffer => listOffer.Name)
